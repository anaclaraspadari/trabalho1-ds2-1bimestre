<!DOCTYPE html>
<html lang="pt-br">

<%- include('includes/head') %>

<body>

    <%- include('includes/navbar') %>

    <h1>Alterar CD</h1>
    <form action="/cds/alterar/<%= cd.id %>" method="post">
        <div class="form-group">
            <label for="titulo">Titulo do Álbum: </label>
            <input type="text" name="titulo" id="nomealbum" value="<%= cd.titulo %>"/>
        </div>
        <div class="form-group">
            <label for="artista">Artista: </label>
            <input type="text" name="artista" id="artistaalbum" value="<%= cd.artista %>"/>
        </div>
        <div class="form-group">
            <label for="datalancamento">Data de Lançamento: </label>
            <input type="date" name="datalancamento" id="datalancamentoalbum" value="<%= cd.datalancamento %>"/>
        </div>
        <div class="form-group">
            <label for="faixas">Numero de Faixas: </label>
            <input type="text" name="faixas" id="faixasalbum" value="<%= cd.faixas %>"/>
        </div>
        <br/><br/>
        <input type="submit" name="enviar" value="Atualizar" class="btn btn-sm"/>
    </form>

</body>
</html>



